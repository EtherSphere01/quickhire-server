model Job {
  id           Int           @id @default(autoincrement())
  title        String
  company      String
  company_logo String?
  location     String
  category     String
  job_type     JobType       @default(FULL_TIME)
  salary       Int?
  description  String
  isDeleted    Boolean       @default(false)
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt
  applications Application[]

  @@index([isDeleted])
  @@index([category])
  @@index([location])
  @@index([job_type])
}
